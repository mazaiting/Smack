<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      android:gravity="center"
      android:text="上传头像"
      android:textSize="35sp"
      />

  <RelativeLayout
      android:id="@+id/activity_sign_view_upload_avatar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@mipmap/bg_avatar"
      >

    <com.mazaiting.smackim.ui.view.RoundedImageView
        android:id="@+id/activity_sign_view_upload_avatar_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/df_avatar"
        app:border_color="@color/blue_light"
        app:border_width="3dp"
        app:corner_radius="90dp"
        app:oval="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/activity_sign_view_upload_avatar_avatar"
        android:background="@drawable/chat_right_normal"
        android:gravity="center"
        android:text="点击猥琐的你"
        android:textColor="@color/green_light"
        android:textSize="20sp"
        />

  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      >
    <Button
        android:id="@+id/activity_sign_view_upload_avatar_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="完成"
        android:textColor="@color/blue_light"
        />
  </RelativeLayout>
</LinearLayout>
